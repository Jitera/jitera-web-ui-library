{
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "outDir": "dist-dts",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "types": ["node"],
    "baseUrl": "./src",
    "paths": {
      "@src/*": ["./*"],
      "@styles/*": ["./stypes/*"],
      "@components/*": ["./components/*"],
      "@constants/*": ["./constants/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "dist-dts"]
}
